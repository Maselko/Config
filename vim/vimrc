    imap ¬ <C-j>
    imap ` <C-x><C-O>

"-- Other Settings -----------------------------------------------------
" TeX and LaTeX stuff
    au BufReadPost,BufNewFile,BufWritePost *.tex nmap <leader>t :!start cmd /c pdflatex "%:p"<CR>
    au BufReadPost,BufNewFile,BufWritePost *.tex nmap <leader>b :!start cmd /c bibtex "%:p:r.aux"<CR>
    au BufReadPost,BufNewFile,BufWritePost *.tex nmap <leader>r :!start cmd /c mupdf "%:p:r.pdf"<CR>
    au BufReadPost,BufNewFile,BufWritePost *.tex nmap <leader>c :!start cmd /c pdflatex "%:p" & bibtex "%:p:r.aux" & pdflatex "%:p" & pdflatex "%:p"<CR> & mupdf "%:p:r.pdf"<CR>


"= Linux ===============================================================
elseif (g:env =~# 'LINUX')
