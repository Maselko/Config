" Run comp.sh to compile the program
    map <leader>c :w! \| term ./Tools/comp.sh %<CR>
" The autocompletation stuff (Insert Mode, Needs to be in polish-pro)
    imap £ <C-j>
    imap § <C-x><C-O>

"-- Other Settings -----------------------------------------------------
" TeX and LaTeX stuff
    au BufReadPost,BufNewFile,BufWritePost *.tex nmap <leader>t :exe "!pdflatex -aux-directory='%:p:h' -output-directory='%:p:h' '%:p'" | redraw
    au BufReadPost,BufNewFile,BufWritePost *.tex nmap <leader>b :exe "!bibtex '%:p:r.aux'" | redraw
    au BufReadPost,BufNewFile,BufWritePost *.tex nmap <leader>r :exe "!xpdf '%:p:r.pdf' &" | redraw
    au BufReadPost,BufNewFile,BufWritePost *.tex nmap <leader>c :exe "!pdflatex -aux-directory='%:p:h' -output-directory='%:p:h' '%:p';bibtex '%:p:r.aux';pdflatex -aux-directory='%:p:h' -output-directory='%:p:h' '%:p';pdflatex -aux-directory='%:p:h' -output-directory='%:p:h' '%:p'; &" | redraw
    au VimLeave *.tex :exe "!rm '%:p:r.log' & rm '%:p:r.aux' & rm '%:p:r.bbl' & rm '%:p:r.blg' & rm '%:p:r.synctex.gz'" | redraw

"= Windows =============================================================
elseif (g:env =~# 'WINDOWS')
